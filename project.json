{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": true,
        "preset": "angular",
        "baseBranch": "master",
        "commitMessageFormat": "chore: :bookmark: release version ${version} [skip ci]",
        "changelogHeader": "# Changelog",
        "tagPrefix": "",
        "noVerify": true,
        "trackDeps": true,
        "push": true,
        "postTargets": ["workspace:github", "is-even:deploy", "is-odd:deploy"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  }
}
